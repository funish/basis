{
  "name": "basis-monorepo",
  "version": "0.0.0",
  "description": "Monorepo for @funish/basis - A unified development toolkit with CLI, package management, versioning, publishing, linting, and git hooks.",
  "private": true,
  "scripts": {
    "build": "pnpm -r prepack",
    "dev": "pnpm -r prepack --stub",
    "check": "biome check . --write --unsafe",
    "format": "prettier --write --list-different . --ignore-path .gitignore",
    "postinstall": "basis githooks install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funish/basis.git"
  },
  "keywords": [
    "basis",
    "development-toolkit",
    "cli",
    "package-management",
    "version-management",
    "publishing",
    "linting",
    "git-hooks",
    "typescript",
    "javascript",
    "developer-experience",
    "code-quality",
    "modern-development",
    "unjs",
    "nypm",
    "semver",
    "citty",
    "monorepo"
  ],
  "author": {
    "name": "Funish",
    "email": "official@funish.net",
    "url": "https://funish.net/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/funish/basis/issues"
  },
  "homepage": "https://github.com/funish/basis#readme",
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@funish/basis": "workspace:*",
    "@types/node": "24.0.4",
    "prettier": "3.6.0",
    "unbuild": "3.5.0"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
